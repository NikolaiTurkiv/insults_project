<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ShowInsults">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineTopInShowInsult"
        style="@style/main_screen_guidLine"
        app:layout_constraintGuide_percent="0.075"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/guidelineTopInShowInsult">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewShowInsult"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <include
        android:id="@+id/topAppBarToShowInsult"
        layout="@layout/app_bar_show_insult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</androidx.constraintlayout.widget.ConstraintLayout>